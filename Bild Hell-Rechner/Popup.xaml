<Window x:Class="Bild_Hell_Rechner.Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bild_Hell_Rechner"
        mc:Ignorable="d"
        Title="Loading... Please wait" Height="250" Width="400" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        x:Name="popup">


    <Grid Background="#AAAAAA">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Loading..." FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
        <Label Content="Please do not close the window!" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>
        <ProgressBar x:Name="progressbar" Value="0" Minimum="0" Maximum="100" Width="380" Height="30" Foreground="#00FF00" Background="#AAFFAA" Grid.Row="2"/>
    </Grid>
    
</Window>
