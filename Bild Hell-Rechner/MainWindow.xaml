<Window x:Class="Bild_Hell_Rechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bild_Hell_Rechner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Canvas Background="#333333">
        <Button x:Name="btnLoadFile" Height="61" Width="100" Canvas.Left="20" Canvas.Top="329" Content="Load Image" Click="Button_Click"/>
        <Button x:Name="btnBrightenUp" Height="61" Width="100" Canvas.Left="140" Canvas.Top="329" Content="Brighten Up" Click="Button_Click"/>
        <Button x:Name="btnSaveImage" Height="61" Width="100" Canvas.Left="260" Canvas.Top="329" Content="Save Image" Click="Button_Click"/>

        <Grid Width="500" Height="300" ShowGridLines="True" Margin="120 0 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image x:Name="imgSource" Grid.Column="0"/>
            <Image x:Name="imgResult" Grid.Column="1"/>
        </Grid>


    </Canvas>
</Window>
